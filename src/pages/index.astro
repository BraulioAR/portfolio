  @font-face {
    font-family: "REM";
    src: url("./fonts/RobotoItalic.ttf");
    font-weight: normal;
  }

  @font-face {
    font-family: "Boxing";
    src: url("./fonts/boxing.ttf");
    font-weight: bold;
  }

  .font-REM {
    font-family: "REM";
  }

  .font-boxing {
    font-family: Boxing, sans-serif;
  }
</style>

<script>
  //Scrolling down

  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute("href"));
      const headerHeight = 60; // Ajusta este valor según la altura de tu encabezado
      const elementPosition = target.getBoundingClientRect().top;
      const offsetPosition = elementPosition - headerHeight;
      window.scrollBy({
        top: offsetPosition,
        behavior: "smooth",
      });
    });
  });

  //Changing header from transparent to solid color for scroll

  document.addEventListener("DOMContentLoaded", () => {
    const header = document.querySelector("header");
    const headerHeight = header.offsetHeight;
    const scrollTrigger = headerHeight * 1;

    document.addEventListener("scroll", () => {
      const scrolled = window.scrollY;
      const opacityValue = scrolled > scrollTrigger ? 0.5 : 0;

      header.style.backgroundColor = `rgba(188, 199, 229, ${opacityValue})`;
    });
  });

  // Hiding and showing project info box

  function toggleBox() {
    console.log("Toggle box clicked");
    const box1 = document.getElementById("box1");
    const box2 = document.getElementById("box2");
    if (box2.classList.contains("hidden")) {
      if (window.innerWidth >= 1024) {
        box1.style.transform = "translate(-110%, 0%)";
        box2.style.transform = " translate(70%, 0%)";
        box1.style.transition = "transform 1s ease";
      } else {
        box1.classList.add("hidden");
        box2.classList.add("animate-fade-up");
        box2.classList.add("animate-duration-[1250ms]");
      }
      box2.classList.toggle("hidden");
    }
  }

  function hideInfoBox() {
    const box1 = document.getElementById("box1");
    const box2 = document.getElementById("box2");
    box1.style.left = "";
    box1.style.top = "";
    box1.style.transform = "";
    box1.style.zIndex = "";
    if (window.innerWidth <= 1024) {
      box1.classList.toggle("hidden");
      box1.classList.add("animate-fade-down");
      box1.classList.add("animate-duration-[1250ms]");
    }
    box2.style.right = "";
    box2.classList.add("hidden");
  }

  document.addEventListener("DOMContentLoaded", () => {
    const box1 = document.getElementById("box1");
    box1.addEventListener("click", toggleBox);

    const box2 = document.getElementById("box2");
    box2.addEventListener("click", hideInfoBox);
  });
  function animateInfoBox() {
    const infoBox = document.getElementById("info");
    infoBox.classList.add("animate-fade-down");
    infoBox.classList.add("animate-duration-[1500ms]");
  }

  document.addEventListener("DOMContentLoaded", () => {
    const checkButton = document.getElementById("checkButton");
    checkButton.addEventListener("click", animateInfoBox);
  });
</script>
